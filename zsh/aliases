alias gclean='git reset --hard && git clean -df'
alias gwc='git whatchanged -p --abbrev-commit --pretty=medium'

# Fetch and rebase on the main branch (auto-detect main/master)
alias gfup='git fetch --all ; git rebase origin/$(git symbolic-ref refs/remotes/origin/HEAD | sed "s@^refs/remotes/origin/@@")'

alias gpoat='git push origin --all && git push origin --tags'
alias gmt='git mergetool --no-prompt'
compdef _git gmt=git-mergetool

alias gsts='git stash show --text'
alias gls='git pull; git submodule update --recursive'
alias gap='git add -p'

# Will cd into the top of the current repository or submodule.
grt() {
  cd $(git rev-parse --show-toplevel || echo ".")
}

# these alias commit and uncommit wip branches
alias gwip='git add -A; git ls-files --deleted -z | xargs -0 git rm; git commit -m "--wip--"'
alias gunwip='git log -n 1 | grep -q -c "\-\-wip\-\-" && git reset HEAD~1'

# List branches sorted by commit date
branches () {
	git for-each-ref --format='%(refname)' --sort=-committerdate refs/heads/ | sed -e "s/refs\/heads\///"
}
glist () {
	for ref in $(git for-each-ref --count=50 --sort=-committerdate --format="%(refname)" refs/heads/ refs/remotes ); do git log -n1 $ref --pretty=format:"%Cgreen%cr%Creset %C(yellow)%d%Creset %C(bold blue)<%an>%Creset%n" | cat ; done | awk '! a[$0]++'
}
glast () {
	git for-each-ref --sort=-committerdate refs/heads/ | awk -F 'refs/heads/' '{ print $2; }'
}

# Repeat command until it fails
untilfail() {
	while $* ; do : ; done
}

# ripgrep with pager
function rgp {
	rg -p $* | less -R
}

# By default, ^S freezes terminal output and ^Q resumes it. Disable that so
# that those keys can be used for other things.
unsetopt flowcontrol

# Modern CLI aliases
alias ls="eza --group-directories-first"
alias l="eza -l --group-directories-first --git"
alias la="eza -la --group-directories-first --git"
alias lt="eza --tree --level=2"
alias cat="bat --paging=never"

# fzf helpers
# cd to a directory found by fzf
cdf() {
  local dir
  dir=$(fd --type d --hidden --exclude .git | fzf --preview 'eza --tree --level=1 {}') && cd "$dir"
}

# edit a file found by fzf
ef() {
  local file
  file=$(fzf --preview 'bat --color=always --line-range=:100 {}') && ${EDITOR:-subl} "$file"
}

# git checkout branch via fzf
gcob() {
  local branch
  branch=$(git branch --sort=-committerdate --format='%(refname:short)' | fzf --preview 'git log --oneline -20 {}') && git checkout "$branch"
}

# Directory shortcuts
alias dev="cd ~/Development"

# Pretty-print JSON
pj() {
	jq '.' "$@"
}
